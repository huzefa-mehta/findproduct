<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "www.findproduct.us"
        version   = "0.0.2">

    <name>Find Product</name>
	
	<description>
        Find Products Near You
    </description>

    <author href="http://findproduct.us" email="support@findproduct.us">
        Find Product
    </author>

<!-- <icon src="images/FindProductIcon.png">  -->
<icon src="images/icons/ios/Icon.png">
 <platform name="ios">
              <!-- iOS 8.0+ -->
              <!-- iPhone 6 Plus  -->
              <icon src="images/icons/ios/Icon-60@3x.png" width="180" height="180" />
              <!-- iOS 7.0+ -->
              <!-- iPhone / iPod Touch  -->
              <icon src="images/icons/ios/Icon-60.png" width="60" height="60" />
              <icon src="images/icons/ios/Icon-60@2x.png" width="120" height="120" />
              <!-- iPad -->
              <!-- iPhone / iPod Touch -->
              <icon src="images/icons/ios/Icon.png" width="57" height="57" />
              <icon src="images/icons/ios/Icon@2x.png" width="114" height="114" />
              <!-- iPad -->
              <icon src="images/icons/ios/Icon-72.png" width="72" height="72" />
              <icon src="images/icons/ios/Icon-72@2x.png" width="144" height="144" />

     </platform>

<preference name="target-device" value="handset" />
<gap:plugin name="org.apache.cordova.geolocation" />
<gap:plugin name="org.apache.cordova.device" />
<preference name="permissions" value="none"/>


<access origin="*" />


</widget>